<div class="cards">
  <div class="card w-100">
    <div class="card-body">
      <h5 class="card-title">@<%= username %> </h5>
      <small><%= number_to_human(followers, units: { thousand: 'K', million: 'M' }) %> Followers </small>
      <p class="card-text"><%= text %></p>
      <ul class="d-flex justify-content-around p-0">
        <li class="list-unstyled">
          <%= link_to tweet_url, target: '_blank' do %>
            <i class="fab fa-twitter"></i>
          <% end %>
        </li>
        <li class="list-unstyled">
          <%= link_to bookmarked_articles_path(tweet: {username: username, text: text, followers: followers, tweet_id: tweet_id}), method: :post do %>
            <i class="far fa-bookmark"></i>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
