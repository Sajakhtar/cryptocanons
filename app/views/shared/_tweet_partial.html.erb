<div class="card w-100 my-1 shadow-sm">
  <div class="card-body">
    <div class="d-flex">
      <h5 class="card-title pr-2">@<%= tweet['user']['username'] %> </h5>
      <small class="text-secondary"><%= number_to_human(tweet['user']['public_metrics']['followers_count'], units: { thousand: 'K', million: 'M' }) %> Followers </small>
    </div>
    <p class="card-text"><%= tweet['text'] %></p>
    <ul class="d-flex justify-content-around p-0">
      <li class="list-unstyled">
        <%= link_to tweet['tweet_url'], target: '_blank' do %>
          <i class="fab fa-twitter"></i>
        <% end %>
      </li>
      <li class="list-unstyled">
        <%= link_to bookmarked_articles_path(tweet: {username: tweet['user']['username'], text: tweet['text'], followers: tweet['user']['public_metrics']['followers_count'], tweet_id: tweet['id']}), method: :post do %>
          <i class="far fa-bookmark"></i>
        <% end %>
      </li>
    </ul>
  </div>
</div>
