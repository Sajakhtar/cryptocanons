<div class="card w-100 my-1 shadow-sm" data-controller="chart">
  <div class="d-flex mt-2 ml-2">
    <button class="btn btn-outline-primary btn-sm mr-1" data-chart-target='button' data-action="click->chart#display" data-timeframe="365" data-index="0">1Y</button>
    <button class="btn btn-outline-primary btn-sm mr-1" data-chart-target='button' data-action="click->chart#display" data-timeframe="182" data-index="1">6M</button>
    <button class="btn btn-outline-primary btn-sm mr-1" data-chart-target='button' data-action="click->chart#display" data-timeframe="90" data-index="2">3M</button>
    <button class="btn btn-outline-primary btn-sm mr-1" data-chart-target='button' data-action="click->chart#display" data-timeframe="30" data-index="3">1M</button>
    <button class="btn btn-outline-primary btn-sm" data-chart-target='button' data-action="click->chart#display" data-timeframe="7" data-index="4">7D</button>
  </div>
  <div class="card-body chart" id="<%= coingecko_id %>" data-coingecko-id="<%= coingecko_id %>" data-chart-target="graph">
  </div>
</div>
