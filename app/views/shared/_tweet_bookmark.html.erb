<div class="card w-100 shadow-sm">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h5 class="card-title pr-2">@<%= tweet.username %> </h5>
      <small class="text-secondary"><%= number_to_human(tweet.followers, units: { thousand: 'K', million: 'M' }) %> Followers </small>
    </div>
    <p class="card-text"><%= tweet.text %></p>
  </div>

  <div class="d-flex">

    <%= link_to bookmarked_article_path(tweet.id),
          method: :delete,
          remote: true,
          class: 'btn btn-ghost-del not-rounded',
          data: { confirm: 'Are you sure?' } do
    %>
      <i class="fas fa-trash"></i>
      <p>Delete tweet</p>
    <% end %>

    <%= link_to "https://twitter.com/#{tweet.username}/status/#{tweet.tweet_id}", target: '_blank', class: 'btn btn-primary not-rounded flex-grow-1' do %>
      <i class="fab fa-twitter"></i>
      <p>Go to tweet</p>
    <% end %>

  </div>
</div>
